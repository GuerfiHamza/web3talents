    <div class="flex flex-col w-full 2xl:w-2/3">
      <div class="flex-1 bg-white rounded-lg shadow-xl p-8">
        <% unless @user.summary.empty? %>
          <h4 class="text-xl text-gray-900 font-bold">About</h4>
          <p class="mt-2 text-gray-700"><%= @user.summary %></p>
        <% end %>
        <% unless @user.skills.empty? %>
          <h4 class="text-xl text-gray-900 font-bold">Skills</h4>
          <div class="flex gap-3">
            <% @user.skills.each do |skill| %>
              <p class="mt-2 text-gray-700 bg-purple-500 px-2 py-2 rounded text-white"><%= skill.name %></p>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="flex-1 bg-white rounded-lg shadow-xl mt-4 p-8">
        <h4 class="text-xl text-gray-900 font-bold">Experiences</h4>
        <ul class="mt-2 text-gray-700">
          <% @user.experiences.each do |experience| %>
            <li class="flex border-y py-2">
              <span class="font-bold w-24"><%= experience.title %></span>
              <span class="text-gray-700"><%= experience.company %></span>
            </li>
          <% end %>
        </ul>
