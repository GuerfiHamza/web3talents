
<section class="h-screen flex items-center justify-center relative overflow-hidden bg-no-repeat bg-center bg-cover" style="background-image: url('<%= cl_image_path "https://res.cloudinary.com/dhufhm6ar/image/upload/v1688276020/bg3_jvuwfy.jpg" %>')">
  <div class="absolute inset-0 bg-gradient-to-b from-transparent to-black"></div>
  <div class="container">
    <div class="grid lg:grid-cols-3 md:grid-cols-2 grid-cols-1">
      <div class="relative overflow-hidden bg-white dark:bg-slate-900 shadow-md dark:shadow-gray-800 rounded-md">
        <div class="p-6">
          <a href="">
            <%= image_tag("logo-dark.png", class:"mx-auto h-[24px] block dark:hidden") %>
            <%= image_tag("logo-light.png", class:"mx-auto h-[24px] dark:block hidden") %>
          </a>
          <h5 class="my-6 text-xl font-semibold">Login</h5>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="text-left">
              <div class="grid grid-cols-1">
                <div class="mb-4 ltr:text-left rtl:text-right">
                  <label class="font-semibold" for="LoginEmail">Email Address:</label>
                  <%= f.input :email,
                required: false,
                autofocus: true,
                label: false,
                input_html: { autocomplete: "email", class:"form-input mt-3 rounded-md", placeholder:"name@example.com", id: "LoginEmail" } %>
                </div>
                <div class="mb-4 ltr:text-left rtl:text-right">
                  <label class="font-semibold" for="LoginPassword">Password:</label>
                  <%= f.input :password,
                required: false,
                label: false,
                input_html: { autocomplete: "current-password",id:"LoginPassword", class:"form-input mt-3 rounded-md", placeholder:"Password:" } %>
                </div>
                <div class="flex justify-between">
                  <div class="inline-flex items-center mb-0">
                    <%= f.input :remember_me,
                        label: false,
                        input_html: {
                          class:"form-checkbox rounded border-gray-200 dark:border-gray-800 text-purple-600 focus:border-purple-300 focus:ring focus:ring-offset-0 focus:ring-purple-200 focus:ring-opacity-50 me-2",
                          type: :checkbox,
                          id:"RememberMe"},
                        as: :boolean if devise_mapping.rememberable? %>
                    <label class="form-checkbox-label text-slate-400" for="RememberMe">Remember me</label>
                  </div>
                  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                    <p class="text-slate-400 mb-0"><%= link_to "Forgot your password?", new_password_path(resource_name), class:"text-slate-400" %></p>
                  <% end %>
                </div>
                <div class="mb-4">
                  <%= f.button :submit, "Login / Sign in", class:"btn bg-purple-600 hover:bg-purple-700 border-purple-600 hover:border-purple-700 text-white rounded-md w-full" %>
                </div>

              </div>
            </div>
          <% end %>
          <div class="text-center">
                  <span class="text-slate-400 me-2">Don't have an account ?</span>
                  <%= link_to "Sign Up", new_user_registration_path, class:"text-black dark:text-white font-bold" %>
                </div>
        </div>
        <div class="px-6 py-2 bg-slate-50 dark:bg-slate-800 text-center">
          <p class="mb-0 text-gray-400 font-medium">Â© <script>
              document.write(new Date().getFullYear())
            </script> Jobstack. Designed by <a href="https://shreethemes.in/" target="_blank" class="text-reset">Shreethemes</a>.</p>
        </div>
      </div>
    </div>
  </div>
</section>
